{
  "name": "site",
  "version": "0.1.22",
  "private": true,
  "scripts": {
    "dev": "npm run update:version && next dev",
    "dev:fresh": "npm run build:packages && npm run dev",
    "build": "npm run clean:publish && npm run update:version && next build",
    "build:static": "npm run clean:publish && npm run update:version && next build",
    "update:version": "node scripts/update-version.js",
    "generate:version": "node scripts/generate-version-info.js",
    "clean:publish": "rimraf publish",
    "start": "next start",
    "lint": "next lint",
    "build:packages": "npm run build:core && npm run build:ui && npm run build:editor",
    "build:core": "cd ../packages/formdown-core && npm run build",
    "build:ui": "cd ../packages/formdown-ui && npm run build",
    "build:editor": "cd ../packages/formdown-editor && npm run build",
    "rebuild:all": "npm run build:packages && npm run build",
    "rebuild:static": "npm run build:packages && npm run build:static",
    "test:packages": "npm run test:core && npm run test:ui && npm run test:editor",
    "test:core": "cd ../packages/formdown-core && npm test",
    "test:ui": "cd ../packages/formdown-ui && npm test",
    "test:editor": "cd ../packages/formdown-editor && npm test"
  },
  "dependencies": {
    "@formdown/core": "file:../packages/formdown-core",
    "@formdown/editor": "file:../packages/formdown-editor",
    "@formdown/ui": "file:../packages/formdown-ui",
    "@tailwindcss/typography": "^0.5.16",
    "marked": "^16.3.0",
    "next": "15.5.3",
    "nextra": "^4.4.0",
    "nextra-theme-docs": "^4.4.0",
    "prismjs": "^1.30.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "jest": "^30.1.3",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.3",
    "typescript": "^5.8.3"
  }
}
