{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2017",
            "DOM"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "jest",
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "__tests__"
    ]
}