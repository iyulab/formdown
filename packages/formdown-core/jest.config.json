{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
        ".ts"
    ],
    "transform": {
        "^.+\\.[jt]s$": [
            "ts-jest",
            {
                "useESM": true
            }
        ]
    },
    "transformIgnorePatterns": [
        "node_modules/(?!marked/)"
    ],
    "moduleNameMapper": {
        "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": [
        "**/__tests__/**/*.test.ts"
    ]
}