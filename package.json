{
    "name": "formdown",
    "version": "0.4.0",
    "description": "A declarative form builder using markdown-like syntax",
    "private": true,
    "workspaces": [
        "packages/*",
        "site"
    ],
    "keywords": [
        "form",
        "parser",
        "generator",
        "markdown",
        "formdown",
        "web-component",
        "lit",
        "typescript"
    ],
    "author": {
        "name": "iyulab",
        "url": "https://www.iyulab.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/iyulab/formdown.git"
    },
    "homepage": "https://formdown.dev",
    "bugs": {
        "url": "https://github.com/iyulab/formdown/issues"
    },
    "scripts": {
        "dev": "cd site && npm run dev",
        "test": "npm run test --workspaces --if-present",
        "build": "node scripts/sync-versions.js && npm run build --workspaces --if-present",
        "publish": "node scripts/publish-all.js",
        "update": "npm update --workspaces --include-workspace-root",
        "update:check": "npx npm-check-updates --workspaces --root",
        "update:latest": "npx npm-check-updates -u --workspaces --root && npm install"
    },
    "devDependencies": {
        "@types/node": "^25.2.3"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    }
}